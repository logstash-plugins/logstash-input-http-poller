{
  "template": "buses",
  "settings" : {
    "number_of_shards" : 1,
    "number_of_replicas" : 0
  },
  "mappings": {
    "_doc": {
        "properties" : {
        "location": { "type": "geo_point" },
        "@tags": { "type": "string", "index" : "not_analyzed" },
        "@timestamp" : { "type" : "date", "index" : "not_analyzed" }
      }
    }
  }
}
